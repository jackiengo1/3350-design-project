<div class="ui center aligned header">
    <h2>Add Student</h2>
</div>

<div class="ui grid">
        <div class="ui sixteen wide column" style="padding-left: 40px; padding-right: 40px;">
          <form class="ui form">
            <div class="field">
              <label>Student Number</label>
              <div class="field">
                {{input type="text"  value = studentNum}}
              </div>
            </div>

            <div class="two fields">
              <div class="field">
                <label>First Name</label>
                {{input type="text"  value = fName}}
              </div>
              <div class="field">
                <label>Last Name</label>
                {{input type="text" value = lName}}
              </div>
            </div>

            <div class="two fields">
              <div class="field">
                <label>Gender</label>
                <select  id = "genderDropDown" onchange={{action 'getGender' value="target.value"}}>
                  {{#each genderModel as |genderChoice|}}
                    <option value={{genderChoice.id}}> {{genderChoice.name}} </option>
                  {{/each}}
                <option selected = 'selected' value = null>Select Gender</option>
                </select>
              </div>
              <div class="field">
                <label>Date of Birth</label>
                {{input value= DOB type="date" id = "dateInput" maxlength = "10"}}
              </div>
            </div>

           <!-- <div class="inline field">
                <label>Residency</label>
                <select  id = "resDropDown" onchange={{action 'getResidency' value="target.value"}}>  -->

            <div class="field">
              <label>Residency</label>
                <select  id = "resDropDown" onchange={{action 'getResidency' value="target.value"}}>
                    {{#each resModel as |residencyChoice|}}
                        <option value={{residencyChoice.id}}> {{residencyChoice.name}}</option>
                    {{/each}}
                        <option selected="selected" value = null> Select Residence</option>
                </select>
            </div>

            <div class="two fields">
              <div class="field">
                <label>Basis of Admission</label>
                {{input type="text"  value=""}}
              </div>
              <div class="field">
                <label>Admission Average</label>
                {{input type="number" max=100 min=0 value=0}}
              </div>
            </div>

            <div class="field">
              <label>Admission Comments</label>
              <textarea rows="2"></textarea>
            </div>

            <div class="field">
              <label>Registration Comments</label>
              <textarea rows="2"></textarea>
            </div>
          </form>
        </div>
</div>

<div class="ui center aligned header">
  <button class="ui primary button" {{action 'addStudent'}}>
    Add Student
  </button>
</div>
