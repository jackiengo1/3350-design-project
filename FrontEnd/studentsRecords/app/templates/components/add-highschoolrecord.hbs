<div class="ui pointing secondary three item menu" style="font-size: 16px;">

  <a class="active item" data-tab="addSecondarySchool" >Modify Secondary School</a>
  <a class="item" data-tab="addCourse">Modify High School Course</a>
  <a class="item" data-tab="addSubject">Modify Subject</a>

</div>


<!-- School tab -->
<div class="ui bottom attached active tab segment" data-tab="addSecondarySchool" style="background-color: #eee3fd; padding-bottom: 35px; padding-top: 35px; padding-left: 50px; padding-right: 50px;">

  <div class="ui grid" style="background-color: #eee3fd;">

    <div class="eight wide column" style="padding-right: 20px;">
      <div class="ui center aligned header" style="margin-bottom: 30px;">
        <h2>Secondary School</h2>
      </div>

        {{#ui-accordion class="styled fluid"}}
          {{#each secondarySchoolModel as |oneSecondarySchool|}}
          <div class="title" style="border-color: #6435c9">
            School Name: {{oneSecondarySchool.name}}
          </div>
          <div class="content">
            <div class="ui vertically divided grid">
              <div class="two column row" style="padding: 0;">
                <div class="column">
                  <p style="text-align: center;"><button class="negative ui button" onclick={{action 'deleteSecondarySchool' oneSecondarySchool}}>Delete</button></p>
                </div>
                <div class="column">
                  <div class="teal ui button" style="width: 55px;" onclick={{action 'openSecSchoolEdit' oneSecondarySchool.id}}><i class="large edit icon"></i></div>
                </div>
              </div>
            </div>
          </div>
          {{/each}}
        {{/ui-accordion}}
    </div>


    <div class="eight wide column" style="padding-left: 20px;">
      <div class="ui center aligned header" style="margin-bottom: 30px;">
        <h2>Add Secondary School</h2>
      </div>

      <div class="ui form">
        <div class="field">
          <label>School Name</label>
          {{input type="text"  value = ssName}}
        </div>
      </div>

      <div class="ui center aligned header">
        <button class="positive ui button" {{action 'addSecondarySchool'}}>
          Add Secondary School
        </button>
      </div>
    </div>

  </div>

</div>


<div class="ui modal secSchoolEditModal">
  <div class="header">
    Edit Secondary School
  </div>
  <div class="content">
    <form class="ui form">
      <div class="one field">
        <div class="field">
          <label>Name: </label> {{input type="text" value = secSchoolsNameToEdit}}
        </div>
      </div>
    </form>
  </div>

  <div class="actions">
    <button class="ui primary button" {{action 'closeSecSchoolEdit'}}>
        Exit
      </button>
    <button class="ui primary button" {{action 'editSecSchool'}}>
        Update
    </button>
  </div>
</div>

<div class="ui modal hsSubjectEditModal">
  <div class="header">
    Edit Subject
  </div>
  <div class="content">
    <form class="ui form">
      <div class="two fields">
        <div class="field">
          <label>Name: </label> {{input type="text" value = hsSubjectNameToEdit}}
        </div>
        <div class="field">
          <label>Description: </label> {{input type="text" value = hsSubjectDescriptionToEdit}}
        </div>
      </div>
    </form>
  </div>

  <div class="actions">
    <button class="ui primary button" {{action 'closehsSubjectEdit'}}>
        Exit
      </button>
    <button class="ui primary button" {{action 'edithsSubject'}}>
        Update
    </button>
  </div>
</div>

<!-- Course tab -->
<div class = "ui tab" data-tab="addCourse" style="background-color: #eee3fd; padding-bottom: 35px; padding-top: 35px; padding-left: 50px; padding-right: 50px;">

  <div class="ui grid" style="background-color: #eee3fd;">

    <div class="eight wide column" style="padding-right: 20px;">
      <div class="ui center aligned header" style="margin-bottom: 30px;">
        <h2>Delete Course</h2>
      </div>


        {{#ui-accordion class="styled fluid"}}
          {{#each courseModel as |oneCourse|}}
          <div class="title" style="border-color: #6435c9">
            <div class="ui vertically divided grid">
              <div class="two column row" style="padding-bottom: 0;">
                <div class="column">
                  <p>Subject Name: {{oneCourse.course.name}}</p>
                </div>
                <div class="column">
                  <p>Level: {{oneCourse.level}}</p>
                </div>
              </div>
            </div>
          </div>

          <div class="content">
            <div class="ui vertically divided grid">
              <div class="one column row" style="padding-bottom: 0;">
                <div class="column">
                  <p>School Name: {{oneCourse.school.name}}</p>
                </div>
              </div>
              <div class="two column row" style="padding-bottom: 0;">
                <div class="column">
                  <p>Source: {{oneCourse.source}}</p>
                </div>
                <div class="column">
                  <p>Unit: {{oneCourse.unit}}</p>
                </div>
              </div>
              <div class="one column row" style="padding: 0;">
                <div class="column">
                  <p style="text-align: center;"><button class="negative ui button" onclick={{action 'deletehsCourse' oneCourse}}>Delete</button></p>
                </div>
              </div>
            </div>
          </div>
          {{/each}}
        {{/ui-accordion}}
    </div>

    <div class="eight wide column" style="padding-left: 20px;">
      <div class="ui center aligned header" style="margin-bottom: 30px;">
        <h2>Add Course</h2>
      </div>

        <div class="ui sixteen wide column">
          <form class="ui form" id="courseForm">

            <div class="two fields">
              <div class="field">
                <label>Subject</label>
                <select onchange={{action 'selectSubject' value="target.value"}}>
                  <option value = null> Select A Subject </option>
                  {{#each subjectModel as |oneSubject|}}
                    <option value={{oneSubject.id}}>{{oneSubject.name}}</option>
                  {{/each}}
                </select>
              </div>
              <div class="field">
                <label>Secondary School</label>
                <select onchange={{action 'selectSchool' value="target.value"}}>
                  <option value = null> Select A School </option>
                  {{#each secondarySchoolModel as |oneSchool|}}
                    <option value={{oneSchool.id}}>{{oneSchool.name}}</option>
                  {{/each}}
                </select>
              </div>
            </div>

            <div class="three fields">
              <div class="field">
                <label>Source</label>
                {{input type="text"  value = source}}
              </div>
              <div class="field">
                <label>Level</label>
                {{input type="text"  value = level}}
              </div>
              <div class="field">
                <label>Unit</label>
                {{input type="number" min=0 value = unit}}
              </div>
            </div>
          </form>
        </div>

      <div class="ui center aligned header">
        <button class="positive ui button" {{action 'addhsCourse'}}>
          Add Course
        </button>
      </div>
    </div>

  </div>

</div>



<!-- Subject tab -->
<div class="ui tab" data-tab="addSubject" style="background-color: #eee3fd; padding-bottom: 35px; padding-top: 35px; padding-left: 50px; padding-right: 50px;">

  <div class="ui grid" style="background-color: #EEE3FD;">
    <div class="eight wide column" style="padding-right: 20px;">

      <div class="ui center aligned header" style="margin-bottom: 30px;">
        <h2>Delete Subject</h2>
      </div>


        {{#ui-accordion class="styled fluid"}}
          {{#each subjectModel as |onehsSubject|}}
          <div class="title" style="border-color: #6435c9">
            Subject Name: {{onehsSubject.name}}
          </div>
          <div class="content">
            <div class="ui vertically divided grid">
              <div class="one column row" style="padding: 0;">
                <div class="column">
                  <p>Description: {{onehsSubject.description}}</p>
                </div>
              </div>
              <div class="two column row" style="padding: 0;">
                <div class="column">
                  <p style="text-align: center;"><button class="negative ui button" onclick={{action 'deletehsSubject' onehsSubject}}>Delete</button></p>
                </div>
                <div class="column">
                  <div class="teal ui button" style="width: 55px;" onclick={{action 'openhsSubjectEdit' onehsSubject.id}}><i class="large edit icon"></i></div>
                </div>
              </div>
            </div>
          </div>
          {{/each}}
        {{/ui-accordion}}
    </div>

    <div class="eight wide column" style="padding-left: 20px;">
      <div class="ui center aligned header" style="margin-bottom: 30px;">
        <h2>Add Subject</h2>
      </div>

      <div class="ui form">
        <div class="field">
          <label>Subject Name</label>
          {{input type="text"  value = subjectName}}
        </div>
        <div class="field">
          <label>Description</label>
          {{input type="text"  value = description}}
        </div>
      </div>

      <div class="ui center aligned header">
        <button class="positive ui button" {{action 'addhsSubject'}}>
          Add Subject
        </button>
      </div>
    </div>
  </div>

</div>
