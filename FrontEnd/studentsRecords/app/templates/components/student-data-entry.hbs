                {{/each}}
              </select>
            </div>
            <div class="field">
              <label>Unit</label>
              <select id="unitSelect" onchange={{action 'selectUnit' value="target.value" }}>
                <option selected="selected" value="null">Select a Unit</option>
                {{#each hsCourseModel2 as |unitChoice|}}
                <option value={{unitChoice.id}}> {{unitChoice.unit}} </option>
                {{/each}}
              </select>
            </div>
          </div>

          <div class="field">
            <label>Grade</label> {{input disabled="true" type="number" value=hsGrade id="gradeField"}}
          </div>

        </form>
      </div>

      <div class="ui center aligned header">
        <button id="addCourseGradeButton" class="ui primary button" {{action 'addhsMark'}}>Add Course Grade</button>
      </div>
    </div>

  </div>

</div>


<!-- program record tab-->
