<div class="ui center aligned header" id="studentRecordsDataEntryHeader">
  <h2>Student Records Data Entry</h2>
</div>


{{#if showAllStudents}}

<div class="fluid ui buttons">
  <div class="ui icon button" data-tooltip="Back" {{action 'backToEntryForm'}} id="studentRecordsDataEntryNavbarButton">
    <i class="reply large icon"></i>
  </div>
  <div class="ui icon button" data-tooltip="Previous Page" {{action 'allStudentsPrev'}} id="studentRecordsDataEntryNavbarButton">
    <i class="arrow left large icon"></i>
  </div>
  <div class="ui icon button" data-tooltip="Next Page" {{action 'allStudentsNext'}} id="studentRecordsDataEntryNavbarButton">
    <i class="arrow right large icon"></i>
  </div>
</div>

<div class="ui center aligned header">
  <h2 id="allStudentRecordsHeader">All Student Records</h2>
</div>

<div class="ui middle aligned divided selection list">
  {{#each studentsRecords as |oneStudent|}}
  <div class="item" {{action 'goToRecord' oneStudent}}>
    <div class="content">
      <div class="header">
        <h3>
          Student ID: {{oneStudent.number}} <br/>
          First name: {{oneStudent.firstName}} <br/>
          Last name: {{oneStudent.lastName}} <br/>
        </h3>
      </div>
    </div>
  </div>
  {{/each}}

</div>


{{else if showFindRecord}}
<!-- Show the menu bar-->
<div class="fluid ui buttons">
  <div class="ui icon button" data-tooltip="Back" {{action 'backToEntryForm'}} id="studentRecordsDataEntryNavbarButton">
    <i class="reply large icon"></i>
  </div>
  <div class="ui icon button" data-tooltip="Find Record" {{action 'findRecord'}} id="studentRecordsDataEntryNavbarButton">
    <i class="search large icon"></i>
  </div>
</div>

<div class="ui center aligned header">
  <h1>Find Student Record</h1>
</div>

<div class="row" id="findStudentRecordRow">
  <div class="ui sixteen wide column">

    <form class="ui form">
      <div class="field">
        <label>Student Number</label>
        {{input size="10" type="text"  value = findStudentNumber}}
      </div>

      <div class="two fields">
        <div class="field">
          <label>First Name</label>
          {{input type="text"  value = findStudentFirstName}}
        </div>
        <div class="field">
          <label>Last Name</label>
          {{input type="text"  value = findStudentLastName}}
        </div>
      </div>
    </form>

  </div>
</div>

<div class="ui center aligned header">
  <h1>{{searchResultTitle}}</h1>
</div>

<div class="ui middle aligned divided selection list">
  {{#each studentRecordResults as |studentRecord|}}
  <div class="item" {{action 'goToRecord' studentRecord}}>
    <div class="content">
      <div class="header">
        <h3>
          Student ID: {{studentRecord.number}} <br/>
          First name: {{studentRecord.firstName}} <br/>
          Last name: {{studentRecord.lastName}} <br/>
        </h3>
      </div>
    </div>
  </div>
  {{/each}}

</div>


{{else}}

{{#if addingStudent}}

<div class="fluid ui buttons">
  <div class="ui icon button" data-tooltip="Back" {{action 'backToEntryForm'}} id="studentRecordsDataEntryNavbarButton">
    <i class="reply large icon"></i>
  </div>

  <div class="ui icon button" data-tooltip="Add Student" {{action 'addStudent'}} id="studentRecordsDataEntryNavbarButton">
    <i class="add user large icon"></i>
  </div>
</div>

{{else}}
<!-- Show the menu bar-->
<div class="fluid ui buttons">

  <div class="ui icon button" data-tooltip="Undo" {{action 'undoSave'}} id="studentRecordsDataEntryNavbarButton">
    <i class="undo large icon"></i>
  </div>

  <div class="ui icon button" data-tooltip="Add Student" {{action 'goToAddStudent'}} id="studentRecordsDataEntryNavbarButton">
    <i class="add user large icon"></i>
  </div>

  <div class="ui icon button" data-tooltip="First Student" {{action 'firstStudent'}} id="studentRecordsDataEntryNavbarButton">
    <i class="step backward large icon"></i>
  </div>

  <div class="ui icon button" data-tooltip="Previous Student" {{action 'previousStudent'}} id="studentRecordsDataEntryNavbarButton">
    <i class="arrow left large icon"></i>
  </div>

  <div class="ui icon button" data-tooltip="Next Student" {{action 'nextStudent'}} id="studentRecordsDataEntryNavbarButton">
    <i class="arrow right large icon"></i>
  </div>

  <div class="ui icon button" data-tooltip="Last Student" {{action 'lastStudent'}} id="studentRecordsDataEntryNavbarButton">
    <i class="step forward large icon"></i>
  </div>

  <div class="ui icon button" data-tooltip="Delete Student" {{action 'deleteStudent'}} id="studentRecordsDataEntryNavbarButton">
    <i class="remove user large icon"></i>
  </div>

  <div class="ui icon button" data-tooltip="All Students" {{action 'allStudents'}} id="studentRecordsDataEntryNavbarButton">
    <i class="list large icon"></i>
  </div>

  <div class="ui icon button" data-tooltip="Find Student" {{action 'findStudent'}} id="studentRecordsDataEntryNavbarButton">
    <i class="search large icon"></i>
  </div>

  <div class="ui icon button" data-tooltip="Help" id="studentRecordsDataEntryNavbarButton">
    <i class="help large icon"></i>
  </div>

</div>

{{/if}}

<!-- Show data entry form -->

<div class="ui pointing secondary five item menu" id="studentRecordsDataEntryTab">

  <a class="active item {{if backToBasicInfo 'active'}}" data-tab="basics" >{{tabInfoText}}</a>
  <a class="item {{if scholarshipTabIsDisabled 'disabled'}}" data-tab="scholarshipAndAward" style = "{{addStudentStyles}}">Scholarships and Awards</a>
  <a class="item {{if scholarshipTabIsDisabled 'disabled'}}" data-tab="advancedStanding" style = "{{addStudentStyles}}">Advanced Standings</a>
  <a class="item {{if scholarshipTabIsDisabled 'disabled'}}" data-tab="HSCourses" style = "{{addStudentStyles}}"> High School Courses</a>
  <a class="item {{if scholarshipTabIsDisabled 'disabled'}}" data-tab="programRecord" style = "{{addStudentStyles}}"> Program Record</a>

</div>


<!-- Basic Info Form -->
<div class="ui bottom attached active tab segment" data-tab="basics">

  <div class="ui grid" id="studentRecordsDataEntryTabContent">

    <div class="row" id="zeroPadding">
      <div class="ui eleven wide column" id="zeroPadding">
        <form class="ui form" id="basicInfoTopRow">
          <div class="field">
            <label>Student Number</label>
            {{input size="10" type="text"  value =tempNumber focus-out='studentNumberStack'}}
          </div>

          <div class="two fields">
            <div class="field">
              <label>First Name</label>
              {{input type="text"  value = tempFN focus-out='studentFNStack'}}
            </div>
            <div class="field">
              <label>Last Name</label>
              {{input type="text"  value = tempLN focus-out='studentLNStack'}}
            </div>
          </div>

            <div class="two fields">
              <div class="field">
              <label>Gender</label>
              <select onchange={{action 'selectGender' value="target.value" }} >
                {{#each genderModel as |genderChoice|}}
                <option value={{genderChoice.id}} selected={{eq selectedGender.id
                  genderChoice.id}}>{{genderChoice.name}} </option>

                  {{/each}}
              </select>
              </div>
              <div class="field">
                <label>Date of Birth</label>
                <input value={{selectedDate}} type="date" onchange={{action 'assignDate' value="target.value"}}>
              </div>
            </div>

            <div class="field">
              <label>Residency</label>
              <select onchange={{action 'selectResidency' value="target.value"}}>

                {{#each residencyModel as |residencyChoice|}}

                <option value={{residencyChoice.id}} selected={{eq selectedResidency.id residencyChoice.id}}>{{residencyChoice.name}}</option>

                {{/each}}
              </select>
            </div>
          </form>
        </div>
        <div class="ui center aligned five wide column segment">
          <img  src={{tempPhoto}}>
        </div>
      </div>


      <div class="row" id="zeroPadding">
        <div class="ui sixteen wide column" id="zeroPadding">
          <form class="ui form">
            <div class="two fields">
              <div class="field">
                <label>Basis of Admission</label>
                {{input type="text"  value= tempBasisOfAdmission focus-out='studentBOAStack'}}
              </div>
              <div class="field">
                <label>Admission Average</label>
                {{input type="text" max=100 min=0 value=tempAdmissionAverage focus-out='studentAAStack'}}
              </div>
            </div>

            <div class="field">
              <label>Admission Comments</label>
              {{textarea rows="2" type="text"  value= tempAdmissionComments focus-out='studentACStack'}}
            </div>

            <div class="field">
              <label>Registration Comments</label>
                {{textarea rows="2" type="text"  value= tempRegistrationComments focus-out='studentRCStack'}}

            </div>
          </form>
        </div>
      </div>

    </div>

  </div>


  <!-- Advanced Standing Tab -->
  <div class = "ui bottom attached tab segment" data-tab="advancedStanding">


    <div class="ui grid" id="studentRecordsDataEntryTabContent">
      <div class="eight wide column" id="studentRecordsDataEntryLeftContent">

        <div class="ui center aligned header" id="studentRecordsDataEntryTabHeader">
          <h2>Student's Advanced Standings</h2>
        </div>

        {{#ui-accordion class="styled fluid"}}
          {{#each listAS as |userListAS|}}
          {{#unless userListAS.isDeleted}}
          <div class="title">
            Course: {{userListAS.course}}
          </div>
          <div class="content">
            <div class="ui vertically divided grid">
              <div class="one column row" id="accordionFirstElement">
                <div class="column">
                  <p>Description: {{userListAS.description}}</p>
                </div>
              </div>
              <div class="two column row" id="zeroPadding">
                <div class="column">
                  <p>Units: {{userListAS.units}}</p>
                </div>
                <div class="column">
                  <p>Grade: {{userListAS.grade}}</p>
                </div>
              </div>
              <div class="one column row" id="zeroPadding">
                <div class="column">
                  <p>From: {{userListAS.from}}</p>
                </div>
              </div>
              <div class="one column row" id="zeroPadding">
                <div class="column">
                  <div class="ui center aligned header">
                    <button class="negative ui button" onclick={{action 'deleteAS' userListAS}}>Delete</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
          {{/unless}}
          {{/each}}
        {{/ui-accordion}}

      </div>

      <div class="eight wide column" id="studentRecordsDataEntryRightContent">

        <div class="ui center aligned header" id="studentRecordsDataEntryTabHeader">
          <h2>Add Advanced Standing</h2>
        </div>

        <div class="ui sixteen wide column">
          <form class="ui form">
            <div class="field">
              <label>Course Name</label>
              {{input disabled = addingStudent size="20" type="text"  value = courseNameAS}}
            </div>

            <div class="field">
              <label>Course Description</label>
              {{input disabled = addingStudent size="20" type="text"  value = descriptionAS}}
            </div>

            <div class="two fields">
              <div class="field">
                <label>Units</label>
                {{input disabled = addingStudent type="number" value = unitsAS}}
              </div>
              <div class="field">
                <label>Grade</label>
                {{input disabled = addingStudent type="number" max=100 min=0 value = gradeAS}}
              </div>
            </div>

            <div class="field">
              <label>From</label>
              {{input  disabled = addingStudent size="20" type="text"  value = fromAS}}
            </div>
          </form>
        </div>

        <div class="ui center aligned header">
          <button class="ui primary button" {{action 'addAS'}} disabled = {{addingStudent}}>
            Add Advanced Standing
          </button>
        </div>

      </div>
    </div>

  </div>

  <!-- Scholarship and award tab-->

  <div class = "ui bottom attached tab segment" data-tab="scholarshipAndAward">

  <div class="ui grid" id="studentRecordsDataEntryTabContent">

    <div class="eight wide column" id="studentRecordsDataEntryLeftContent">
      <div class="ui center aligned header" id="studentRecordsDataEntryTabHeader">
        <h2>Student's Scholarships and Awards</h2>
      </div>

      <div class="ui middle aligned divided list">
        {{#each scholarShipAndAwardList as |userScholarShipAndAwardList|}}
        {{#unless userScholarShipAndAwardList.isDeleted}}
        <div class="item">
          <div class="right floated content" id="listDeleteButton">
            <div class="negative ui button" onclick={{action 'deleteScholarshipAward' userScholarShipAndAwardList}}>Delete</div>
          </div>
          <div class="content" id="listText">
            Note: {{userScholarShipAndAwardList.note}}
          </div>
        </div>
        {{/unless}}
        {{/each}}
      </div>
    </div>

    <div class="eight wide column" id="studentRecordsDataEntryRightContent">
      <div class="ui center aligned header" id="studentRecordsDataEntryTabHeader">
        <h2>Add Scholarships and Awards</h2>
      </div>

      <div class="ui form">
        <div class="field">
          <label>Note</label>
          {{textarea  disabled = addingStudent type="text" value = scholarshipAndAwardNote}}
        </div>
      </div>

      <div class="ui center aligned header">
        <button class="ui primary button" {{action 'addScholarShipAndAward'}} disabled = {{addingStudent}}>
          Add
        </button>
      </div>
    </div>

  </div>

  </div>



<!-- HS record tab-->
    <div class = "ui bottom attached tab segment" data-tab="HSCourses">

      <div class="ui grid" id="studentRecordsDataEntryTabContent">

        <div class="eight wide column" id="studentRecordsDataEntryLeftContent">
          <div class="ui center aligned header" id="studentRecordsDataEntryTabHeader">
            <h2>High School Marks</h2>
          </div>

          {{#each currentStudentHSGrades as |oneHSGrade|}}
            <h3>High School: {{oneHSGrade.HighSchoolCoursesInfo.SecondSchoolInfo}}</h3>
            <h3>Subject: {{oneHSGrade.HighSchoolCoursesInfo.HighSchoolSubjectInfo}}</h3>
            <h3>Course: {{oneHSGrade.HighSchoolCoursesInfo}}</h3>
            <h3>Mark: {{oneHSGrade.mark}}</h3>
          {{/each}}
        </div>

        <div class="eight wide column" id="studentRecordsDataEntryRightContent">
          <div class="ui center aligned header" id="studentRecordsDataEntryTabHeader">
            <h2>Add Term Code</h2>
          </div>

          <div class="ui sixteen wide column">
            <form class="ui form">
              <div class="field">
                <label>Grade</label>
                {{input type="text"  value= hsGrade}}
              </div>
              <div class="field">
                <label>Source</label>
                <select>
                  {{#each hsCourseModel as |courseChoice|}}
                    <option value={{courseChoice.id}} onchange={{eq selectedCourse courseChoice}}> {{courseChoice.name}} </option>
                  {{/each}}
                </select>
              </div>
            </form>          
          </div>

          <div class="ui center aligned header">
            <button class="ui primary button" {{action 'addhsMark'}} >
              Add Term
            </button>
          </div>
        </div>

      </div>

    </div>



    <!-- program record tab-->
        <div class = "ui bottom attached tab segment" data-tab="programRecord">

          <div class="ui grid" id="studentRecordsDataEntryTabContent">
            <div class="eight wide column" id="studentRecordsDataEntryLeftContent">
              <div class="ui center aligned header" id="studentRecordsDataEntryTabHeader">
                <h2>Student's Program Record</h2>
              </div>

              {{#each currentStudentTermCode as |oneTerm|}}
                <h3>Program:{{oneTerm.program.name}}</h3>
                <h3>Course:{{oneTerm.courseInfo.name}}</h3>
                <h3>Unit: {{oneTerm.courseInfo.unit}}</h3>
                <h3>Mark: {{oneTerm.courseInfo.mark.mark}}</h3>
              {{/each}}
            </div>

            <div class="eight wide column" id="studentRecordsDataEntryRightContent">
              <div class="ui center aligned header" id="studentRecordsDataEntryTabHeader">
                <h2>Add Grade</h2>
              </div>              

              <div class="ui sixteen wide column">
                <form class="ui form">
                  <div class="field">
                    <label>Term Code</label>
                    <select onchange={{action 'selectTermCode' value="target.value"}}>
                      <option selected = "selected" value = null> Select a Term Code </option>
                      {{#each termCodeModel as |oneTermCode|}}
                      <option value={{oneTermCode.id}} >{{oneTermCode.name}}</option>
                      {{/each}}
                    </select>
                  </div>

                  <div class="field">
                    <label>Course Code</label>
                    <select onchange={{action 'selectCourseCode' value="target.value"}}>
                      <option selected = "selected" value = null> Select a Course Code </option>
                      {{#each courseCodeModel as |oneCourseCode|}}
                      <option value={{oneCourseCode.id}} >{{oneCourseCode.name}}</option>
                      {{/each}}
                    </select>
                  </div>

                  <div class="field">
                    <label>Grade</label>
                    {{input disabled = addingStudent type="number" max=100 min=0 value = programGrade}}
                  </div>
                  
                  <div class="field">
                    <label>Note</label>
                    {{input disabled = addingStudent type="text" value = programNote}}    
                  </div>
                </form>
              </div>

              <div class="ui center aligned header">
                <button class="ui primary button" {{action 'addGrade'}} >
                  Add Grade
                </button>
              </div>
            </div>
          </div>

        </div>

  {{/if}}
