        <form class="ui form" id="highSchoolCourseForm">

          <div class="field">
            <label>High School</label>
            <select id="schoolSelect" onchange={{action 'selectHighSchool' value="target.value" }}>
              <option selected="selected" value="null">Select a High School</option>
              {{#each secondarySchoolModel as |schoolChoice|}}
              <option value={{schoolChoice.id}}> {{schoolChoice.name}} </option>
              {{/each}}
            </select>
          </div>

          <div class="field">
            <label>Subject (Description) - Source</label>
            <select id="courseSelect" onchange={{action 'selectCourse' value="target.value" }}>
              <option selected="selected" value="null">Select a Course</option>
              {{#each hsCourseModel as |courseChoice|}}
              <option value={{courseChoice.id}}> {{courseChoice.course.name}} ({{courseChoice.course.description}}) - {{courseChoice.source}} </option>
              {{/each}}
            </select>
          </div>

