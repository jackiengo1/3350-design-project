<div class="ui center aligned header" id="studentRecordsDataEntryHeader">
  <h2>Student Records Data Entry</h2>
</div>

{{#if showAllStudents}}

<div class="fluid ui buttons">
  <div class="ui icon button" data-tooltip="Back" {{action 'backToEntryForm'}} id="studentRecordsDataEntryNavbarButton">
    <i class="reply large icon"></i>
  </div>
  <div class="ui icon button" data-tooltip="Previous Page" {{action 'allStudentsPrev'}} id="studentRecordsDataEntryNavbarButton">
    <i class="arrow left large icon"></i>
  </div>
  <div class="ui icon button" data-tooltip="Next Page" {{action 'allStudentsNext'}} id="studentRecordsDataEntryNavbarButton">
    <i class="arrow right large icon"></i>
  </div>
</div>

<div class="ui center aligned header">
  <h2 id="allStudentRecordsHeader">All Student Records</h2>
</div>

<div class="ui middle aligned divided selection list">
  {{#each studentsRecords as |oneStudent|}}
  <div class="item" {{action 'goToRecord' oneStudent}}>
    <div class="content">
      <div class="header">
        <h3>
          Student ID: {{oneStudent.number}} <br/> First name: {{oneStudent.firstName}} <br/> Last name: {{oneStudent.lastName}}
          <br/>
        </h3>
      </div>
    </div>
  </div>
  {{/each}}

</div>

{{else if showFindRecord}}
<!-- Show the menu bar-->
<div class="fluid ui buttons">
  <div class="ui icon button" data-tooltip="Back" {{action 'backToEntryForm'}} id="studentRecordsDataEntryNavbarButton">
    <i class="reply large icon"></i>
  </div>
  <div class="ui icon button" data-tooltip="Find Record" {{action 'findRecord'}} id="studentRecordsDataEntryNavbarButton">
    <i class="search large icon"></i>
  </div>
</div>

<div class="ui center aligned header">
  <h1>Find Student Record</h1>
</div>

<div class="row" id="findStudentRecordRow">
  <div class="ui sixteen wide column">

    <form class="ui form">
      <div class="field">
        <label>Student Number</label> {{input size="10" type="text" value = findStudentNumber}}
      </div>

      <div class="two fields">
        <div class="field">
          <label>First Name</label> {{input type="text" value = findStudentFirstName}}
        </div>
        <div class="field">
          <label>Last Name</label> {{input type="text" value = findStudentLastName}}
        </div>
      </div>
    </form>

  </div>
</div>

<div class="ui center aligned header">
  <h1>{{searchResultTitle}}</h1>
</div>

<div class="ui middle aligned divided selection list">
  {{#each studentRecordResults as |studentRecord|}}
  <div class="item" {{action 'goToRecord' studentRecord}}>
    <div class="content">
      <div class="header">
        <h3>
          Student ID: {{studentRecord.number}} <br/> First name: {{studentRecord.firstName}} <br/> Last name: {{studentRecord.lastName}}
          <br/>
        </h3>
      </div>
    </div>
  </div>
  {{/each}}

</div>

{{else}} {{#if addingStudent}}

<div class="fluid ui buttons">
  <div class="ui icon button" data-tooltip="Back" {{action 'backToEntryForm'}} id="studentRecordsDataEntryNavbarButton">
    <i class="reply large icon"></i>
  </div>

  <div class="ui icon button" data-tooltip="Add Student" {{action 'addStudent'}} id="studentRecordsDataEntryNavbarButton">
    <i class="add user large icon"></i>
  </div>
</div>

{{else}}
<!-- Show the menu bar-->
<div class="fluid ui buttons">

  <div class="ui icon button" data-tooltip="Undo" {{action 'undoSave'}} id="studentRecordsDataEntryNavbarButton">
    <i class="undo large icon"></i>
  </div>

  <div class="ui icon button" data-tooltip="Save" {{action 'saveStudent'}} id="studentRecordsDataEntryNavbarButton">
    <i class="save large icon"></i>
  </div>

  <div class="ui icon button" data-tooltip="Add Student" {{action 'goToAddStudent'}} id="studentRecordsDataEntryNavbarButton">
    <i class="add user large icon"></i>
  </div>

  <div class="ui icon button" data-tooltip="First Student" {{action 'firstStudent'}} id="studentRecordsDataEntryNavbarButton">
    <i class="step backward large icon"></i>
  </div>

  <div class="ui icon button" data-tooltip="Previous Student" {{action 'previousStudent'}} id="studentRecordsDataEntryNavbarButton">
    <i class="arrow left large icon"></i>
  </div>

  <div class="ui icon button" data-tooltip="Next Student" {{action 'nextStudent'}} id="studentRecordsDataEntryNavbarButton">
    <i class="arrow right large icon"></i>
  </div>

  <div class="ui icon button" data-tooltip="Last Student" {{action 'lastStudent'}} id="studentRecordsDataEntryNavbarButton">
    <i class="step forward large icon"></i>
  </div>

  <div class="ui icon button" data-tooltip="Delete Student" {{action 'deleteStudent'}} id="studentRecordsDataEntryNavbarButton">
    <i class="remove user large icon"></i>
  </div>

  <div class="ui icon button" data-tooltip="All Students" {{action 'allStudents'}} id="studentRecordsDataEntryNavbarButton">
    <i class="list large icon"></i>
  </div>

  <div class="ui icon button" data-tooltip="Find Student" {{action 'findStudent'}} id="studentRecordsDataEntryNavbarButton">
    <i class="search large icon"></i>
  </div>

  <div class="ui icon button" data-tooltip="Help" id="studentRecordsDataEntryNavbarButton">
    <i class="help large icon"></i>
  </div>

</div>
{{/if}}


<!-- Show data entry form -->
<div class="ui pointing secondary six item menu" id="studentRecordsDataEntryTab">

  <a class="active item {{if backToBasicInfo 'active'}}" data-tab="basics">{{tabInfoText}}</a>
  <a class="item {{if scholarshipTabIsDisabled 'disabled'}}" data-tab="scholarshipAndAward" style="{{addStudentStyles}}">Scholarships and Awards</a>
  <a class="item {{if scholarshipTabIsDisabled 'disabled'}}" data-tab="advancedStanding" style="{{addStudentStyles}}">Advanced Standings</a>
  <a class="item {{if scholarshipTabIsDisabled 'disabled'}}" data-tab="HSCourses" style="{{addStudentStyles}}"> High School Courses</a>
  <a class="item {{if scholarshipTabIsDisabled 'disabled'}}" data-tab="programRecord" style="{{addStudentStyles}}"> Program Record</a>
  <a class="item {{if scholarshipTabIsDisabled 'disabled'}}" data-tab="adjudicationTab" style="{{addStudentStyles}}"> Adjudication</a>

