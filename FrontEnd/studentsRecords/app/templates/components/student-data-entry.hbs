{{#if showAllStudents}}

<div class="ui grid" id="studentRecordsDataEntryTabContent">
  <div class="row">
    <div class="sixteen wide column">
      <div class="fluid ui buttons">
        <div class="ui icon button" data-tooltip="Back" {{action 'backToEntryForm'}} id="studentRecordsDataEntryNavbarButton">
          <i class="reply large icon"></i>
        </div>
        <div class="ui icon button" data-tooltip="Previous Page" {{action 'allStudentsPrev'}} id="studentRecordsDataEntryNavbarButton">
          <i class="arrow left large icon"></i>
        </div>
        <div class="ui icon button" data-tooltip="Next Page" {{action 'allStudentsNext'}} id="studentRecordsDataEntryNavbarButton">
          <i class="arrow right large icon"></i>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="sixteen wide column">
      <div class="ui center aligned header" id="studentRecordsDataEntryTabHeader">
        <h2>List of Student Records</h2>
      </div>

      <table class="ui selectable celled table">
        <thead>
          <tr>
            <th>Student ID</th>
            <th>First Name</th>
            <th>Last Name</th>
          </tr>
        </thead>
        <tbody>
          {{#each studentsRecords as |oneStudent|}}
          <tr {{action 'goToRecord' oneStudent}}>
            <td>{{oneStudent.number}}</td>
            <td>{{oneStudent.firstName}}</td>
            <td>{{oneStudent.lastName}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>

</div>


{{else if showFindRecord}}
<!-- Show the menu bar-->

<div class="ui grid" id="studentRecordsDataEntryTabContent">
  <div class="row">
    <div class="sixteen wide column">
      <div class="fluid ui buttons">
        <div class="ui icon button" data-tooltip="Back" {{action 'backToEntryForm'}} id="studentRecordsDataEntryNavbarButton">
          <i class="reply large icon"></i>
        </div>
        <div class="ui icon button" data-tooltip="Find Record" {{action 'findRecord'}} id="studentRecordsDataEntryNavbarButton">
          <i class="search large icon"></i>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="sixteen wide column">
      <div class="ui center aligned header" id="studentRecordsDataEntryTabHeader">
        <h2>Find Student Records</h2>
      </div>

      <form class="ui form">
        <div class="field">
          <label>Student Number</label> {{input size="10" type="text" value = findStudentNumber}}
        </div>
        <div class="two fields">
          <div class="field">
            <label>First Name</label> {{input type="text" value = findStudentFirstName}}
          </div>
          <div class="field">
            <label>Last Name</label> {{input type="text" value = findStudentLastName}}
          </div>
        </div>
      </form>

    </div>
  </div>

  <div class="row">
    <div class="sixteen wide column">
      <div class="ui center aligned header">
        <h3>{{searchResultTitle}}</h3>
      </div>

      {{#if searchResultTitle}}
      <table class="ui selectable celled table">
        <thead>
          <tr>
            <th>Student ID</th>
            <th>First Name</th>
            <th>Last Name</th>
          </tr>
        </thead>
        <tbody>
          {{#each studentRecordResults as |studentRecord|}}
          <tr {{action 'goToRecord' studentRecord}}>
            <td>{{studentRecord.number}}</td>
            <td>{{studentRecord.firstName}}</td>
            <td>{{studentRecord.lastName}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
      {{/if}}
    </div>
  </div>

</div>


