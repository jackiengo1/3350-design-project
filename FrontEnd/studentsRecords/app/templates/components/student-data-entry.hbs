<!-- Basic Info Form -->
<div class="ui bottom attached active tab segment" data-tab="basics">

  <div class="ui grid" id="studentRecordsDataEntryTabContent">

    <div class="row" id="zeroPadding">
      <div class="ui eleven wide column" id="zeroPadding">
        <form class="ui form" id="basicInfoTopRow">
          <div class="field">
            <label>Student Number</label> {{input size="10" type="text" value =tempNumber focus-out='studentNumberStack'}}
          </div>

          <div class="two fields">
            <div class="field">
              <label>First Name</label> {{input type="text" value = tempFN focus-out='studentFNStack'}}
            </div>
            <div class="field">
              <label>Last Name</label> {{input type="text" value = tempLN focus-out='studentLNStack'}}
            </div>
          </div>

          <div class="two fields">
            <div class="field">
              <label>Gender</label>
              <select onchange={{action 'selectGender' value="target.value" }}>
                {{#each genderModel as |genderChoice|}}
                <option value={{genderChoice.id}} selected={{eq selectedGender.id
                  genderChoice.id}}>{{genderChoice.name}} </option>

                  {{/each}}
                </select>
            </div>
            <div class="field">
              <label>Date of Birth</label>
              <input value={{selectedDate}} type="date" onchange={{action 'assignDate' value="target.value" }}>
            </div>
          </div>

          <div class="field">
            <label>Residency</label>
            <select onchange={{action 'selectResidency' value="target.value" }}>
                {{#each residencyModel as |residencyChoice|}}
                <option value={{residencyChoice.id}} selected={{eq selectedResidency.id residencyChoice.id}}>{{residencyChoice.name}}</option>
                {{/each}}
              </select>
          </div>
        </form>
      </div>
      <div class="ui center aligned five wide column segment">
        <img src={{tempPhoto}}>
      </div>
    </div>

    <div class="row" id="zeroPadding">
      <div class="ui sixteen wide column" id="zeroPadding">
        <form class="ui form">
          <div class="two fields">
            <div class="field">
              <label>Basis of Admission</label> {{input type="text" value= tempBasisOfAdmission focus-out='studentBOAStack'}}
            </div>
            <div class="field">
              <label>Admission Average</label> {{input type="text" max=100 min=0 value=tempAdmissionAverage focus-out='studentAAStack'}}
            </div>
          </div>

          <div class="field">
            <label>Admission Comments</label> {{textarea rows="2" type="text" value= tempAdmissionComments focus-out='studentACStack'}}
          </div>

          <div class="field">
            <label>Registration Comments</label> {{textarea rows="2" type="text" value= tempRegistrationComments focus-out='studentRCStack'}}
          </div>
        </form>
      </div>
    </div>

  </div>

</div>


