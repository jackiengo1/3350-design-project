<div class="ui center aligned header">
  <h2>Modify Gender</h2>
</div>



    {{#each genderModel as |oneGender|}}
    <div class="ui radio checkbox">
      <input type="radio" name ="gender" onchange={{action 'getGender' oneGender}}>
      <label>{{oneGender.name}}</label>
    </div>
    {{/each}}
    <button class="ui button" onclick={{action 'deleteGender'}}>Delete</button>


<div class="ui grid">
  <div class="ui left aligned  seven wide column">
    <div class="ui form">
      <div class="inline field">
        <label>Gender</label>
        {{input type="text"  value = genderName}}
      </div>
    </div>
  </div>
</div>

<div class="ui center aligned header">
  <button class="ui primary button" {{action 'addGender'}}>
    Add Gender
  </button>
</div>
