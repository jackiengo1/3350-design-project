<div class="ui center aligned header">
  <h2>Add Award</h2>
</div>

<div class="ui grid">
  <div class="ui left aligned  seven wide column">
    <div class="ui form">
      <div class="inline field">
        <label>Award Note</label>
        {{input type="text"  value = awardNote}}
      </div>
      <div class="inline field">
        <label>Student Number</label>
        {{input type="text"  value = studentNumber}}
      </div>

    </div>
  </div>
</div>

<div class="ui center aligned header">
  <button class="ui primary button" {{action 'addAward'}}>
    Give Award :)
  </button>
</div>
